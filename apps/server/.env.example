# =============================================================================
# Server Configuration
# =============================================================================
BASE_URL=http://localhost:3000
PORT=3000
NODE_ENV=development

# =============================================================================
# Authentication (Better Auth)
# =============================================================================
BETTER_AUTH_SECRET=              # Generate with: openssl rand -base64 32
BETTER_AUTH_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:5173,http://localhost:3001

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=mongodb://localhost:27017/eduplus

# =============================================================================
# Google OAuth
# =============================================================================
NATIVE_GOOGLE_CLIENT_ID=         # Google Cloud Console → Native app client ID
WEB_GOOGLE_CLIENT_ID=            # Google Cloud Console → Web client ID
WEB_GOOGLE_CLIENT_SECRET=        # Google Cloud Console → Web client secret

# =============================================================================
# Email (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@eduplus.com

# =============================================================================
# Bunny Stream Configuration
# Get these from https://dash.bunny.net
# =============================================================================
BUNNY_API_KEY=                    # Account Settings → API → API Key
BUNNY_LIBRARY_ID=                 # Video Library ID (from Stream → Video Library)
BUNNY_CDN_HOSTNAME=               # Your CDN hostname (e.g., vz-xxxxx-xxx.b-cdn.net)
BUNNY_WEBHOOK_SECRET=             # Optional: For webhook signature verification

# =============================================================================
# Debug Flags (DO NOT enable in production)
# =============================================================================
AUTH_DEBUG=false                  # Enable verbose auth logging
DEBUG_OTP=false                   # Log OTPs to console (development only!)

# =============================================================================
# Rate Limiting (optional - defaults shown)
# =============================================================================
RATE_LIMIT_MAX=1000              # Max requests per window (default endpoints)
RATE_LIMIT_WINDOW_MS=60000       # Window duration in ms (1 minute)

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info                   # pino log level: trace, debug, info, warn, error
