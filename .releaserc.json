{
	"branches": ["main"],
	"repositoryUrl": "https://github.com/AzlanEh/EducationPlus.git",
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"preset": "conventionalcommits",
				"releaseRules": [
					{ "type": "feat", "release": "minor" },
					{ "type": "fix", "release": "patch" },
					{ "type": "perf", "release": "patch" },
					{ "type": "revert", "release": "patch" },
					{ "type": "docs", "scope": "README", "release": "patch" },
					{ "type": "refactor", "release": "patch" },
					{ "type": "style", "release": false },
					{ "type": "chore", "release": false },
					{ "type": "test", "release": false },
					{ "breaking": true, "release": "major" }
				]
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "conventionalcommits",
				"presetConfig": {
					"types": [
						{ "type": "feat", "section": "âœ¨ Features" },
						{ "type": "fix", "section": "ğŸ› Bug Fixes" },
						{ "type": "perf", "section": "âš¡ Performance" },
						{ "type": "revert", "section": "âª Reverts" },
						{ "type": "docs", "section": "ğŸ“ Documentation" },
						{ "type": "style", "section": "ğŸ’„ Styles" },
						{ "type": "refactor", "section": "â™»ï¸ Refactoring" },
						{ "type": "test", "section": "âœ… Tests" },
						{ "type": "build", "section": "ğŸ”§ Build" },
						{ "type": "ci", "section": "ğŸ‘· CI/CD" },
						{ "type": "chore", "section": "ğŸ”¨ Chores" }
					]
				}
			}
		],
		[
			"@semantic-release/changelog",
			{
				"changelogFile": "CHANGELOG.md",
				"changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file."
			}
		],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": ["CHANGELOG.md", "package.json", "pnpm-lock.yaml"],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		[
			"@semantic-release/github",
			{
				"successComment": "ğŸ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:\n\nThe release is available on [GitHub release](<github_release_url>)",
				"labels": ["released"],
				"releasedLabels": [
					"released<%= nextRelease.channel ? `-${nextRelease.channel}` : \"\" %>"
				]
			}
		]
	]
}
